<% include ../partials/header.ejs %>
<link rel="stylesheet" type="text/css" href="/styles/your-stylesheet.css">

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>Welcome to the User Dashboard</h1>
      <br/><br/>
    </div>

    <div class="col-md-12">
      <h2>Upcoming Events</h2>
      <% if(items.length > 0) { %>
        <table class="table table-hover">
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Location</th>
            <th>Start Date</th>
            <th>Start Time</th>
            <th>End Date</th>
            <th>End Time</th>
            <th colspan="1">Actions</th>
          </tr>
          <% items.forEach(function(item, index){ %>
            <tr>
              <td><%= item.e_id %></td>
              <td><%= item.e_name %></td>
              <td><%= item.e_desc %></td>
              <td><%= item.e_location %></td>
              <td><%= item.e_start_date %></td>
              <td><%= item.e_start_time %></td>
              <td><%= item.e_end_date %></td>
              <td><%= item.e_end_time %></td>
              <td>
                <a href="/event/join/<%= item.e_id %>" class="btn btn-sm btn-success">
                  Join
                </a>
              </td>
            </tr>
          <% }) %>
        </table>
      <% } else { %>
        <p><strong>No events available yet. Add a new event!</strong></p>
      <% } %>
    </div>
  </div>
</div>

<% include ../partials/footer.ejs %>
