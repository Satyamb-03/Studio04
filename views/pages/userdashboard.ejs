<% include ../partials/header.ejs %>
<link rel="stylesheet" type="text/css" href="/styles/your-stylesheet.css">
<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">

<!-- Bootstrap JS (with Popper.js for modals) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>

<script>
  function submitJoinForm(event) {
    event.preventDefault(); // Prevent default form submission

    // Get the form data
    const form = event.target;
    const formData = new FormData(form);
    const message = formData.get('message');
    const eventId = form.action.split('/').pop(); // Get event ID from action URL

    console.log('Submitting form with message:', message, 'and event ID:', eventId);

    // Make an AJAX POST request to submit the form data
    fetch(`/event/join/${eventId}`, {
      method: 'POST',
      body: JSON.stringify({ message }),
      headers: {
        'Content-Type': 'application/json',
      },
    })
    .then(response => response.json()) // Parse JSON response
    .then(data => {
      if (data.message) {
        // Handle success message
        alert('Successfully joined the event!');
        console.log('Join success:', data);
        
        // Close the modal
        $('#joinFormModal').modal('hide');
      } else {
        // Handle server errors (if no message in response)
        alert('Error joining event. Please try again.');
        console.error('Error response from server:', data);
      }
    })
    .catch(error => {
      // Catch any network errors
      alert('Error joining event. Please try again.');
      console.error('Error:', error);
    });
  }
</script>


<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>Welcome to the User Dashboard</h1>
      <br/><br/>
    </div>

    <div class="col-md-12">
      <h2>Upcoming Events</h2>
      <% if(items.length > 0) { %>
        <table class="table table-hover">
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Location</th>
            <th>Start Date</th>
            <th>Start Time</th>
            <th>End Date</th>
            <th>End Time</th>
            <th colspan="1">Actions</th>
          </tr>
          <% items.forEach(function(item, index){ %>
            <tr>
              <td><%= item.e_id %></td>
              <td><%= item.e_name %></td>
              <td><%= item.e_desc %></td>
              <td><%= item.e_location %></td>
              <td><%= item.e_start_date %></td>
              <td><%= item.e_start_time %></td>
              <td><%= item.e_end_date %></td>
              <td><%= item.e_end_time %></td>
            </tr>
          <% }) %>
        </table>
      <% } else { %>
        <p><strong>No events available yet. Add a new event!</strong></p>
      <% } %>
    </div>
  </div>
</div>

