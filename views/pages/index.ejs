<% include ../partials/header.ejs %> 
<link rel="stylesheet" type="text/css" href="/styles/your-stylesheet.css">  

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>Welcome to the Event Management System</h1>
      <p>Manage and view all your events from here.</p>
      
      
      <br/><br/>
    </div>

    <div class="col-md-12">
      <h2>Upcoming Events</h2>
      <% if (items.length > 0) { %>
        <table class="table table-hover">
          <thead>
            <tr>
              <th>ID</th>
              <th>Name</th>
              <th>Description</th>
              <th>Location</th>
              <th>Start Date</th>
              <th>Start Time</th>
              <th>End Date</th>
              <th>End Time</th>
              
            </tr>
          </thead>
          <tbody>
            <% items.forEach(function(item) { %>
              <tr>
                <td><%= item.e_id %></td>
                <td><%= item.e_name %></td>
                <td><%= item.e_desc %></td>
                <td><%= item.e_location %></td>
                <td><%= item.e_start_date %></td>
                <td><%= item.e_start_time %></td>
                <td><%= item.e_end_date %></td>
                <td><%= item.e_end_time %></td>
              
               
                </td>
              </tr>
            <% }) %>
          </tbody>
          
        </table>
      <% } else { %>
        <p><strong>No events available yet. Add a new event!</strong></p>
      <% } %>
    </div>
  </div>
</div>

<% include ../partials/footer.ejs %>
